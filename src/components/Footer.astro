---
import SNSLink from '/src/components/SNSLink.astro';

type item = {
  icon: string;
  url: string;
};

const items: item[] = [
  {
    icon: 'mdi:github',
    url: 'https://github.com/NI57721',
  },
  {
    icon: 'prime:twitter',
    url: 'https://x.com/NI57721',
  },
  {
    icon: 'ri:bluesky-fill',
    url: 'https://bsky.app/profile/ni57721.bsky.social',
  },
];
---
<style lang="scss">
  footer {
    border-top: solid 1px var.$grey-01;
    border-bottom: solid 2px var.$green-02;
    place-content: center;
    margin-block: 32px 4px;
    width: 100%;
    @include mixin.middle-view {
      min-width: var.$content-width;
    }
    @include mixin.mobile-view {
      margin-block: 10vw .5vw;
      padding-inline: 3vw;
    }
  }

  footer > ul {
    align-items: baseline;
    display: grid;
    grid-column-gap: 16px;
    grid-template-columns: repeat(2, auto) max-content;
    margin-inline: auto;
    padding: 4px 12px;
    text-align: left;
    width: var.$content-width;
    @include mixin.mobile-view {
      grid-template-columns: auto max-content;
      grid-row-gap: 2vw;
      padding: 1vw 2vw;
      width: 100%;
    }
  }

  footer > ul > li {
    color: var.$green-02;
    font-size: 14px;
    @include mixin.mobile-view {
      font-size: 4vw;
    }
    &:first-child {
      text-align: left;
      @include mixin.mobile-view {
        grid-column: 1 / 3;
      }
    }
    &:nth-child(2) {
      text-align: right;
      @include mixin.mobile-view {
        text-align: left;
      }
    }
    &:last-child {
      text-align: right;
    }
  }

  footer > ul > li > ul {
    display: grid;
    grid-template-columns: repeat(10, max-content);
    @include mixin.mobile-view {
      grid-gap: 3vw;
    }
  }
</style>

<footer>
  <ul>
    <li>
      <ul>
        { items.map((item) =>
          <li>
            <SNSLink icon={item.icon} url={item.url}/>
          </li>
        )}
      </ul>
    </li>
    <li><a href="/legal">LEGAL</a></li>
    <li>&copy;NI57721 All Rights Reserved</li>
  </ul>
</footer>

