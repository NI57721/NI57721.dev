---
const { name, url, licence, licenceUrl } = Astro.props;
---
<style lang="scss">
  section {
    margin-bottom: 16px;
    @include mixin.mobile-view {
      font-size: 10vw;
      margin-bottom: 5vw;
      padding-inline: 3vw;
    }
  }

  h2 {
    font-size: 24px;
    font-weight: bold;
    @include mixin.mobile-view {
      margin-bottom: 1vw;
    }
  }

  a {
    &:link {
      color: var.$blue-01;
    }
    &:visited {
      color: var.$blue-02;
    }
    &:hover {
      text-decoration: underline;
    }
  }

  p {
    font-size: 16px;
  }

  p > a {
    font-size: 18px;
  }
</style>

<section>
  <h2><a href={url}>{name}</a></h2>
  <p>
    Declared licence: <a href={licenceUrl}>{licence}</a>
  </p>
</section>

