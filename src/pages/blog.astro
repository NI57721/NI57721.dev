---
import Base from '@/layouts/Base.astro';
import TagList from '@/components/TagList.astro';
import PostList from '@/components/PostList.astro';

const title = 'NI57721\'s Blog';
const description = 'NI57721\'s Blog';
---
<style lang="scss">
  h2 {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 4px;
    @include mixin.mobile-view {
      margin-bottom: 2vw;
    }
  }

  section {
    margin-bottom: 16px;
    @include mixin.mobile-view {
      margin-bottom: 3vw;
    }
  }
</style>

<Base title={title} description={description}>
  <section>
    <h2>タグ一覧</h2>
    <TagList />
  </section>
  <section>
    <h2>記事一覧</h2>
    <PostList />
  </section>
</Base>

