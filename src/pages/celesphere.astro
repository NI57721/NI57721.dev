---
import Celesphere from '@/components/Celesphere/';
import Document from '@/layouts/Document.astro';

const title = 'Celesphere -- Celestial sphere emulator';
const description = 'Celesphere -- Celestial sphere emulator';
const lang = 'en';
const backgroundColor = '#002';
---
<script define:vars={{ backgroundColor }}>
  const root = document.querySelector(':root');
  root.style.setProperty('--backgroundColor', backgroundColor);
</script>

<style lang="scss">
  html, body {
    background-color: var(--backgroundColor);
  }
</style>

<Document title={title} description={description} lang={lang}>
  <Celesphere backgroundColor={backgroundColor} client:only="react" />
</Document>

