---
const title = 'NI57721'
const description = 'Web site managed by a web engineer'
import Base from 'src/layouts/Base.astro';
---
<style lang="scss">
  div {
    padding-block: 16px;
    @include mixin.mobile-view {
      padding-block: 3vw;
      margin-bottom: 3vw;
    }
  }

  div p {
    font-size: 18px;
    line-height: 1.5;
    text-align: left;
  }

  div a {
    font-weight: bold;
    &:link {
      color: var.$blue-01;
    }
    &:visited {
      color: var.$blue-02;
    }
    &:hover {
      text-decoration: underline;
    }
  }

  ul {
    padding-block: 16px;
    @include mixin.mobile-view {
      padding-block: 3vw;
    }
  }

  li {
    font-size: 24px;
    margin-bottom: 16px;
    margin-left: 24px;
    padding-left: 8px;
    @include mixin.mobile-view {
      margin-bottom: 8vw;
    }
    &:first-child {
      list-style-type: "üòÑ";
    }
    &:nth-child(2) {
      list-style-type: "üìù";
    }
  }

  li a {
    margin-block: 4px;
    text-decoration: none;
    @include mixin.mobile-view {
      margin-block: 1vw;
    }
    &:hover {
      text-decoration: underline;
    }
  }
</style>

<Base title={title} description={description}>
  <div>
    <p>
      Welcome.<br>
      This is a web site managed by a web engineer, <a href="/profile/">NI57721</a>.
    </p>
  </div>
  <ul>
    {['profile', 'blog'].map((item: string) =>
    <li>
      <a href={item}>
        {item.replace(/./, (c) => c.toUpperCase())}
      </a>
    </li>
    )}
  </ul>
</Base>

