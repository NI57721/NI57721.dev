---
const title = 'NI57721 のお部屋'
const description = '悪い子はいねえが'
import Base from 'src/layouts/Base.astro';
---
<style lang="scss">
  li {
    margin-bottom: 8px;
    @include mixin.mobile-view {
      margin-bottom: 2vw;
    }
  }
  a {
    margin-block: 4px;
    text-decoration: underline;
    @include mixin.mobile-view {
      margin-block: 1vw;
    }
    &:hover {
      text-decoration: none;
    }
  }
</style>

<Base title={title} decription={description}>
  <ul>
    {['profile', 'blog'].map((item: string) =>
      <li>
        <a href={item}>
          {item.replace(/./, (c) => c.toUpperCase())}
        </a>
      </li>
    )}
  </ul>
</Base>

