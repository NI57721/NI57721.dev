---
import Base from "@/layouts/Base.astro";

type item = {
  name: string;
  path: string;
  marker: string;
};

const items: item[] = [
  {
    name: "Profile",
    path: "/profile",
    marker: "üòÑ",
  },
  {
    name: "Blog (English)",
    path: "/blog",
    marker: "üìù",
  },
  {
    name: "Blog (Japanese)",
    path: "/ja/blog",
    marker: "üìù",
  },
  {
    name: "Celesphere",
    path: "/celesphere",
    marker: "‚≠ê",
  },
];
---

<style lang="scss">
  div {
    padding-block: 16px;
    @include mixin.mobile-view {
      padding-block: 3vw;
      margin-bottom: 3vw;
    }
  }

  div p {
    font-size: 18px;
    line-height: 1.5;
    text-align: left;
  }

  div a {
    font-weight: bold;
    &:link {
      color: var.$blue-01;
    }
    &:visited {
      color: var.$blue-02;
    }
    &:hover {
      text-decoration: underline;
    }
  }

  ul {
    padding-block: 16px;
    @include mixin.mobile-view {
      padding-block: 3vw;
    }
  }

  li {
    font-size: 24px;
    margin-bottom: 16px;
    margin-left: 24px;
    padding-left: 8px;
    @include mixin.mobile-view {
      margin-bottom: 8vw;
    }

    &::marker {
      content: var(--marker);
    }
  }

  li a {
    margin-block: 4px;
    text-decoration: none;
    @include mixin.mobile-view {
      margin-block: 1vw;
    }
    &:hover {
      text-decoration: underline;
    }
  }
</style>

<Base>
  <div>
    <p>
      Welcome.<br />
      This is a web site managed by a web engineer, <a href="/profile/"
        >NI57721</a
      >.
    </p>
  </div>
  <ul>
    {
      items.map((item) => (
        <li style={`--marker: "${item.marker}"`}>
          <a href={item.path}>{item.name}</a>
        </li>
      ))
    }
  </ul>
</Base>
